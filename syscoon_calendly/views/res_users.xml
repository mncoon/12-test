<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_users_form_simple_modif" model="ir.ui.view">
            <field name="name">res.users.preferences.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="before">
                    <group string="Calendly Settings">
                        <field name="calendly_token"/>
                        <field name="calendly_token_active" readonly="1"/>
                        <field name="calendly_email" readonly="1"/>
                        <field name="calendly_webkooks_id" readonly="1"/>
                        <field name="calendly_url" readonly="1"/>
                        <button string="Activate Token" name="calendly_activate_token" 
                            type="object" attrs="{'invisible': [('calendly_token_active', '=', True)]}"/>
                        <button string="Activate Webhooks" name="calendly_activate_webhooks" 
                            type="object" attrs="{'invisible': ['|', ('calendly_webkooks_id', '=', ''), ('calendly_token_active', '=', True)]}"/>
                        <button string="Deactivate Webhooks" name="calendly_deactivate_webhooks" 
                            type="object" attrs="{'invisible': [('calendly_webkooks_id', '!=', '')]}"/>
                        <button string="Refresh Calendly Data" name="calendly_about"
                            type="object" attrs="{'invisible': [('calendly_token', '=', '')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='preferences']" position="after">
                    <group string="Calendly Settings">
                        <field name="calendly_token"/>
                        <field name="calendly_token_active" readonly="1"/>
                        <field name="calendly_email" readonly="1"/>
                        <field name="calendly_webkooks_id" readonly="1"/>
                        <field name="calendly_url" readonly="1"/>
                        <button string="Activate Token" name="calendly_activate_token" 
                            type="object" attrs="{'invisible': [('calendly_token_active', '=', True)]}"/>
                        <button string="Activate Webhooks" name="calendly_activate_webhooks" 
                            type="object" attrs="{'invisible': ['|', ('calendly_webkooks_id', '=', ''), ('calendly_token_active', '=', True)]}"/>
                        <button string="Deactivate Webhooks" name="calendly_deactivate_webhooks" 
                            type="object" attrs="{'invisible': [('calendly_webkooks_id', '!=', '')]}"/>
                        <button string="Refresh Calendly Data" name="calendly_about"
                            type="object" attrs="{'invisible': [('calendly_token', '=', '')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>